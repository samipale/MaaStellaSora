{
    "采购_入口": {
        "action": {
            "param": {},
            "type": "DoNothing"
        },
        "next": [
            "采购_判断是否在主页",
            {
              "jump_back": true,
              "name": "通用_返回主页"
            }
        ]
    },
    "采购_判断是否在主页": {
        "action": {
            "param": {},
            "type": "DoNothing"
        },
        "recognition": {
            "param": {
                "template": [
                  "menu.png"
                ]
            },
            "type": "TemplateMatch"
        },
        "next": [
          "采购_开始采购"
        ]
    },
    "采购_开始采购": {
        "action": {
            "param": {"custom_action": "DailyGiftAction"},
            "type": "Custom"
        },
        "next": [
          "通用_返回主页"
        ]
    },
    "采购_判断是否已领取": {
        "action": {
            "param": {},
            "type": "Click"
        },
        "focus": {
            "Node.Recognition.Succeeded": "检测到每日赠礼已领取 将跳过"
        },
        "next": [
            "通用_返回主页"
        ],
        "recognition": {
            "param": {
                "expected": [
                    "已领取"
                ]
            },
            "type": "OCR"
        },
        "timeout": 2000
    },
    "采购_前往采购": {
        "action": {
            "param": {},
            "type": "Click"
        },
        "focus": {
            "Node.Action.Starting": "正在前往采购"
        },
        "next": [
            "采购_领取每日赠礼",
            "采购_判断是否已领取"
        ],
        "recognition": {
            "param": {
                "template": [
                    "procurement.png"
                ]
            },
            "type": "TemplateMatch"
        },
        "timeout": 2000
    },
    "采购_前往商城": {
        "action": {
            "param": {},
            "type": "Click"
        },
        "focus": {
            "Node.Action.Starting": "正在前往商城"
        },
        "next": [
            "采购_领取每日赠礼",
            "采购_判断是否已领取"
        ],
        "recognition": {
            "param": {
                "template": [
                    "shop/shop.png"
                ]
            },
            "type": "TemplateMatch"
        },
        "timeout": 2000
    },
    "采购_领取每日赠礼": {
        "action": {
            "param": {},
            "type": "Click"
        },
        "focus": {
            "Node.Action.Starting": "正在领取每日赠礼"
        },
        "next": [
            "通用_返回主页",
            {
                "jump_back": true,
                "name": "通用_点击空白处继续"
            }
        ],
        "recognition": {
            "param": {
                "template": [
                    "shop/daily_gift_1.png",
                    "shop/daily_gift_2.png"
                ]
            },
            "type": "TemplateMatch"
        },
        "pre_delay": 1000, // 简单应对商城界面拉取礼包信息时无法点击每日赠礼的问题
        "timeout": 2000
    }
}